@model RealEstate
@{
}

@if (Model.Category != null)
{
    if (Model.Category == ItemCategory.RealEstate)
    {
        <div class="card">
            <div class="card-header">
                Real estate:
            </div>
            <div class="card-body form-row">
                <form method="post" asp-action="SaveRealEstate">
                    <input type="hidden" asp-for="@Model.Category" />
                    <div class="form-group row">
                        <label asp-for="@Model.Title" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Title" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Description" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Description" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Area" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Area" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Floor" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Floor" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.NumberOfRooms" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.NumberOfRooms" class="form-control form-control-sm">
                        </div>
                    </div>
                        <input type="submit" value="Submit" />
                </form>
            </div>
        </div>
    }
}
