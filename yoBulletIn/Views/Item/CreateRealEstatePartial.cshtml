@model RealEstate
@{
}

@if (Model.Category != null)
{
    if (Model.Category == ItemCategory.RealEstate)
    {
        <script src="~/js/imgPreviewer.js"></script>

        <div class="card">
            <div class="card-header">
                @Model.Category.Value -> Create new ad:
            </div>
            <div class="card-body">
                <form method="post" asp-action="SaveRealEstate">
                    <input type="hidden" asp-for="@Model.Category" />
                    <input type="hidden" asp-for="@Model.ItemOwner" />
                    <input type="hidden" asp-for="@Model.Id" />
                    <div class="form-group">
                        <label asp-for="@Model.Title" class="col-sm-2 form-text col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Title" class="form-control form-control-sm" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <script>
                                jQuery(document).ready(function ($) {
                                    new EasyEditor('#editor');
                                });
                            </script>
                            <textarea id="editor" placeholder="Enter the text here" asp-for="@Model.Description" class="form-control form-control-sm"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Area" class="col-sm-2 form-text col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Area" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Floor" class="col-sm-2 form-text col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Floor" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.NumberOfRooms" class="col-sm-2 form-text col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.NumberOfRooms" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Upload images</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input type="file" name="Image" id="file-input" class="custom-file-input" multiple />
                            </div>
                        </div>
                        <div class="col-sm-10"><span id="preview"></span></div>
                    </div><br />
                    <div class="form-group">
                        <div class="col-sm-10">
                            @Html.SubmitBtn("Submit")
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
}
