@model Electronics
@{
}

@if (Model.Category != null)
{
    if (Model.Category == ItemCategory.Electronics)
    {
        <script src="~/js/imgPreviewer.js"></script>

        <div class="card">
            <div class="card-header">
                @Model.Category.Value -> Create new ad:
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="SaveElectronics">
                    <input type="hidden" asp-for="@Model.Category" />
                    <input type="hidden" asp-for="@Model.ItemOwner" />

                    <div class="form-group ">
                        <label asp-for="@Model.Title" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Title" class="form-control form-control-sm" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <script>
                                jQuery(document).ready(function ($) {
                                    new EasyEditor('#editor');
                                });
                            </script>
                            <textarea id="editor" placeholder="Enter the text here" asp-for="@Model.Description" class="form-control form-control-sm"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Brand" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Brand" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Model" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Model" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Portable" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.Portable" value="true" checked="@Model.Portable" class="form-check-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Price" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="number" asp-for="@Model.Price" class="form-control form-control-sm">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Upload images</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input type="file" name="Image" id="file-input" class="custom-file-input" multiple />
                            </div>
                        </div>
                        <div class="col-sm-10"><span id="preview"></span></div>
                    </div><br />
                    <div class="form-group">
                        <div class="col-sm-10">
                            @Html.SubmitBtn("Submit")
                        </div>
                    </div>

                </form>
            </div>
        </div>
    }
}
