@model Car
@{
}

@if (Model.Category != null)
{
    if (Model.Category == ItemCategory.Cars)
    {
        <div class="card">
            <div class="card-header">
                Clothes:
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="SaveCars">
                    <input type="hidden" asp-for="@Model.Category" />

                    <div class="form-group ">
                        <label asp-for="@Model.Title" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Title" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Description" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Mark" class="col-sm-2 col-form-label col-form-label-sm"></label>

                        <select asp-for="@Model.Mark" asp-items="Html.GetEnumSelectList<CarMarks>()">
                            <option selected="selected" value="">Select gender</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Model" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="@Model.Model" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Mileage" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="number" asp-for="@Model.Mileage" class="form-control form-control-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Year" for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
                        <div class="col-sm-10">
                            <input type="date" asp-for="@Model.Year" class="form-control form-control-sm">
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" name="Image" class="custom-file-input">
                            <label class="custom-file-label">Select image (drag and drop supported):</label>
                        </div>
                    </div>
                    
                    @Html.SubmitBtn("Submit")
                </form>
            </div>
        </div>
    }
}
