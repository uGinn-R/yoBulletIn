@model IEnumerable<Item>
@{
    ViewData["Title"] = "Home Page";
}

<header class="py-2 bg-opacity-25 border-bottom mb-4">
    <div class="container">
        <div class="text-center my-5">
            <h1 class="fw-bolder">yoBulletIn</h1>
            <p class="lead mb-0">@localizer["Slogan"]</p>
        </div>
    </div>
</header>
<div class="text-center my-5">
    <p class="lead mb-0">@localizer["Latest"]</p>
</div>
@if (Model is null)
{
    <div class="text-center my-5">
        <p class="lead mb-0">@localizer["ResultIsEmpty"]</p>
    </div>
}
else
@await Html.PartialAsync("ItemsGridView")

